version: "3.9"
services:
  app:
    image: nextcloud:{{ nextcloud_version }}
    restart: unless-stopped
    environment:
      POSTGRES_HOST: db
      POSTGRES_DB: nextcloud
      POSTGRES_USER: nextcloud
      POSTGRES_PASSWORD: {{ nextcloud_db_password }}
      NEXTCLOUD_ADMIN_USER: {{ nextcloud_admin_user }}
      NEXTCLOUD_ADMIN_PASSWORD: {{ nextcloud_admin_password }}
      NEXTCLOUD_TRUSTED_DOMAINS: "{{ nextcloud_trusted_domains | join(' ') }}"
      PHP_MEMORY_LIMIT: {{ nextcloud_php_memory_limit }}
    ports:
      - "8080:80"
    volumes:
      - {{ nextcloud_data_path }}/app:/var/www/html
    depends_on:
      - db
  db:
    image: postgres:{{ nextcloud_db_version }}
    restart: unless-stopped
    environment:
      POSTGRES_DB: nextcloud
      POSTGRES_USER: nextcloud
      POSTGRES_PASSWORD: {{ nextcloud_db_password }}
    volumes:
      - {{ nextcloud_data_path }}/db:/var/lib/postgresql/data
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -d nextcloud"]
      interval: 30s
      timeout: 10s
      retries: 5
volumes: {}
networks:
  default:
    driver: bridge
